@import 'nib/vendor'

azulito = #4393fa
grisesito = #2c2c2c
azulito_claro = #68a6ef
moradito = #9500b5
moradito_claro = #a839b5

header
	background-color #2e363f
	color white
	position relative
	overflow hidden
	
.home_link
	text-shadow 3px 3px 3px black
	&:hover
		text-shadow 3px 3px 3px black !important
.buttons
	margin-bottom 1em
	a
		padding 0.2em !important
		border 4px solid white !important
		border-radius 5px
		color black !important
		background rgba(moradito,0.6)
		transition 0.3s !important
		
		&:hover
			color white !important
			background rgba(moradito,0.9)
	
.me
	figure
		margin 1em 0.5em 1em 1em

		img
			width 60px
			border-radius 7px
			
.name
	position absolute
	top 2em
	left 5.5em
	
	strong
		font-size 1.5em
		
	.largo
		display none
		

.share
	iframe
		position absolute
		width 75px
		height 20px
		
		&:nth-child(1)
			top 1em
			right 0.5em
			
		&:nth-child(2)
			top 2.6em
			right 1em
			
		&:nth-child(3)
			top 4.2em
			right 0.5em
						
.yo
	.f_yo
		img
			border-radius 50%
			border 4px solid grisesito
			
	.social_icons
		width 392px
		position relative
		margin 0 auto
		figure
			img
				float left
				margin-right 0.5em
				opacity .8
				animation 1s parpadeo infinite
			

 .abajo
	background azulito
	padding 0.2em
	display inline-block
	border 4px solid grisesito
	animation 1s parpadeo infinite
	color white
	
.antes
	a
		display inline-block
		
	.curso_git
		background moradito_claro
		padding 0.3em
		color black !important
		border-radius 5px
		transition .3s !important
		
		&:hover
			background moradito
		
	.navidad
		background azulito_claro
		color black !important
		margin-top 0.5em
		padding 0.3em
		border-radius 5px
		transition .3s !important
		
		&:hover
			background azulito
			
.clases
	h2
		color white
		padding 0.5em !important
		border 4px solid white !important
		border-radius 10px
		
	.proceso
		background #fad542
		
.arbol
	.working_div
		position relative
		margin 0 auto
		width 804px
		figure
			img
				width 250px
				float left
				margin-right 0.5em
						
.setenta	
	.f_soft
	.f._mixed
	.f_hard
		img
			width 220px
			

.workflows
	.f_team
	.f_propio
		img
			width 240px
		
.ambientes
	.f_ambientes
		img
			width 350px
			
.gh-pages
	.key
		img
			border 4px solid grisesito
			

.aviso
		background #ff303b
		color white 
		padding 0.5em !important
		border 4px solid #fad542 !important
		animation 0.5s parpadeo infinite
		
		strong
			color black
			
.margin-top
	margin-top 0.5em !important
	
.uppercase
	text-transform uppercase
		
			
section	
	strong
		em
			color #fa3c99
@keyframes parpadeo
	40%
		transform scale(1.1)
		
	20% 60%
		transform scale(0.8)
		

@media screen and (min-width: 767px)
	.share
		iframe
			position absolute
			width 75px
			height 20px
			
			&:nth-child(1)
				top 2.5em
				right 11.7em
				
			&:nth-child(2)
				right 6.5em
				top 2.5em
				
			&:nth-child(3)
				top 2.5em
				right 1em
				

	.name
		.corto
			display none
		
		.largo
			display block

		
		
		
		